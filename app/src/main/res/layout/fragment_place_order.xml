<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.example.quikcart.ui.placeorder.secondscreen.PlaceOrderViewModel" />

    </data>



        <ScrollView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:background="@color/xd_burgundy"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.placeorder.secondscreen.PlaceOrderFragment"
                android:orientation="vertical"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"
                    app:civ_border_color="@color/xd_dark_pink"
                    app:civ_circle_background_color="@color/xd_pink"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/confirm_order"
                    android:textSize="20sp"
                    android:textColor="@color/white" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/rounded_transparent_bg"
                    >
                    <LinearLayout
                        android:id="@+id/sub_total_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/sub_total_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/subtotal"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/pacifico" />

                        <TextView
                            android:id="@+id/sub_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="20.0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            app:price="@{vm.subTotal}"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/discount_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/discount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/discount_applied"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/pacifico" />

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="20.0"
                            android:text="@{vm.discount}"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fees_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <TextView
                            android:id="@+id/fees_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shipping_fees"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/pacifico" />

                        <TextView
                            android:id="@+id/fees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="20.0"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            app:price="@{vm.shippingFees}" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/total_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/fees_linear"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/total_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_price"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:fontFamily="@font/pacifico" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="20.0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            app:price="@{vm.totalPrice}"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/total_linear"
                        android:background="@drawable/rounded_transparent_bg"
                        android:padding="8dp"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_payment_method"
                            android:fontFamily="@font/pacifico"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_transparent_bg"
                            android:padding="4dp"
                            android:layout_marginVertical="8dp">

                            <com.paypal.checkout.paymentbutton.PaymentButtonContainer
                                android:id="@+id/payment_button_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:paypal_button_color="silver"
                                app:paypal_button_label="pay"
                                app:paypal_button_shape="rectangle"
                                app:paypal_button_size="large"
                                app:paypal_button_enabled="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cash_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_green_bg">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/cash"
                                android:layout_gravity="center"
                                android:padding="8dp" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="72dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/cash_on_delivery"
                                android:textSize="24sp"
                                android:fontFamily="@font/barlow_bold"
                                android:textColor="@color/xd_lemon_dark" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="@string/place_order"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/xd_burgundy"
                        android:onClick="@{()->vm.confirmOrder()}"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</layout>