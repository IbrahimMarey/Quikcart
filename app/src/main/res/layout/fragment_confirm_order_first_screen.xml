<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.placeorder.firstscreen.ConfirmOrderFirstScreenFragment">

       <ProgressBar
           android:id="@+id/progress_bar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="@id/address_recycler"
           app:layout_constraintBottom_toBottomOf="@id/address_recycler"
           app:layout_constraintStart_toStartOf="@id/address_recycler"
           app:layout_constraintEnd_toEndOf="@id/address_recycler"
           />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/address_recycler"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/address_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_coupon"
            app:layout_constraintTop_toBottomOf="@id/address_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_coupon"
            android:layout_marginHorizontal="16dp"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/xd_text_view_details"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_layout_coupon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/xd_burgundy"
            android:text="@string/continue_small"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>