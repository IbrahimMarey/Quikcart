<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <data>

      </data>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:context=".ui.home.HomeFragment">

            <com.google.android.material.search.SearchBar
                android:id="@+id/search_bar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:hint="@string/search_product"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="false"
                app:searchIcon="@drawable/ic_search"
                android:background="@drawable/rounded_bg"
                android:visibility="gone"
                />


            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/search_bar"
                >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="8dp"
                      >
                        <TextView
                            android:id="@+id/category_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/search_bar"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="@string/explore_by_category"
                            android:layout_marginStart="16dp"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_categories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/category_tv"
                            android:orientation="horizontal"
                            app:layout_constraintHeight_percent=".17"
                            android:paddingHorizontal="8dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/main_category_item" />

                        <TextView
                            android:id="@+id/brand_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/recycler_categories"
                            app:layout_constraintBottom_toTopOf="@id/brand_tv"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="@string/brand"
                            android:layout_marginStart="16dp"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_brands"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/brand_tv"
                            android:layout_marginHorizontal="16dp"
                            android:padding="8dp"
                            app:spanCount="2"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            android:orientation="horizontal"
                            tools:listitem="@layout/brand_item"
                            android:background="@drawable/rounded_bg_pink"

                            />

                        <com.denzcoskun.imageslider.ImageSlider
                            android:id="@+id/image_slider"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"

                            app:layout_constraintTop_toBottomOf="@id/recycler_brands"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="16dp"
                            app:iss_delay="1000"
                            app:iss_period="1000"
                            app:iss_auto_cycle="true"
                            app:iss_error_image="@drawable/ic_cart"
                            android:background="@drawable/rounded_image"
                            android:layout_marginHorizontal="16dp"
                            />
                  </LinearLayout>
            </ScrollView>
            <ProgressBar
                android:id="@+id/brands_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="@id/search_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


      </androidx.constraintlayout.widget.ConstraintLayout>
</layout>