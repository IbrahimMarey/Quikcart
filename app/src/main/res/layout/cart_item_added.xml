<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0dp"
            >
            <ImageView
                android:id="@+id/cartItemImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/cart"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/btnRemoveItem"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="right"
                android:background="@drawable/del_bg"
                />

        </FrameLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_margin="4dp"
            >
            <TextView
                android:gravity="center"
                android:id="@+id/cartItemTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="14dp"
                android:fontFamily="@font/barlow_bold"
                tools:text="Cart Item Title"
                android:layout_margin="2dp"
                />
            <!--<TextView
                android:gravity="center"
                android:id="@+id/cartItemSubTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12dp"
                android:fontFamily="@font/barlow"
                tools:text="item sub title"
                android:layout_margin="2dp"
                />-->
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/cartItemPrice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/xd_burgundy"
                tools:text="$ 25"
                android:layout_margin="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingVertical="4dp"
            android:paddingHorizontal="16dp"
            >
            <ImageButton
                android:id="@+id/btnDecrease"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_remove"
                android:background="@drawable/cart_item_ic_bg"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/cartItemQuntity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16dp"
                android:fontFamily="@font/pacifico"
                android:textColor="@color/xd_burgundy"
                tools:text="2"
                />
            <ImageButton
                android:id="@+id/btnIncrease"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_add"
                android:background="@drawable/cart_item_ic_bg"
                android:padding="8dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>