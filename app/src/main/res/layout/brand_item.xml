<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="brandItem"
            type="com.example.quikcart.models.entities.SmartCollectionsItem" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:strokeWidth="2dp"
        android:layout_marginHorizontal="8dp"
        app:strokeColor="@color/xd_blue_asset1"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/xd_blue_asset1"

            >

            <ImageView
                android:id="@+id/brand_img"
                android:layout_width="150dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent=".72"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                imageUrl="@{brandItem.image.src}"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/brand_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/brand_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/brand_img"
                android:text="@{brandItem.title}"
                android:textSize="20sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>