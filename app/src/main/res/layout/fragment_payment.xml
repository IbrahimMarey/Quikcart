<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.payment.PaymentFragment"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:weightSum="16">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/payment_methods"
        android:textSize="18sp"
        android:fontFamily="@font/barlow_bold"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/xd_pink"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/bank_card"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/bank_card"
                android:textSize="24sp"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/xd_dark_pink1"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/xd_yellow"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/credit_card"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/credit_card"
                android:textSize="24sp"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/xd_yellow_dark"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/xd_lemon"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/cash"
                android:layout_gravity="center"
                android:padding="8dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/cash_on_delivery"
                android:textSize="24sp"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/xd_lemon_dark"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/googlePayCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/google_pay"
                android:layout_gravity="center"
                android:padding="8dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/google_pay"
                android:textSize="24sp"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/xd_blue"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/paypalPayCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/xd_blue_asset1"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/paypal"
                android:layout_gravity="center"
                android:padding="8dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/pay_pal"
                android:textSize="24sp"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/xd_blue"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>