<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="lineItemsItem"
            type="com.example.quikcart.models.entities.cart.LineItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            imageUrl="@{lineItemsItem.image.src}"
            android:scaleType="fitXY"
            android:src="@drawable/product"
            android:adjustViewBounds="true"
            app:civ_circle_background_color="@color/xd_burgundy"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/xd_burgundy"

            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:text="@{lineItemsItem.name}"
            tools:text="Big Brown Bear Boots"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/xd_burgundy_transparent"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           app:layout_constraintTop_toBottomOf="@id/name"
           android:paddingTop="8dp"
           android:weightSum="2"
           android:background="@color/xd_burgundy_transparent"
           >
           <LinearLayout
               android:id="@+id/qty_linear"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
              android:gravity="center"
               android:layout_weight="1"
               >
               <TextView
                   android:id="@+id/qty_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/quantity"
                   android:textStyle="bold"
                   android:textSize="20sp"
                   android:fontFamily="@font/pacifico"
                   />
               <TextView
                   android:id="@+id/qty"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@{String.valueOf(lineItemsItem.quantity)}"
                   tools:text="30"
                   android:layout_marginStart="16dp"
                   android:textSize="20sp"


                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_weight="1"
               >
               <TextView
                   android:id="@+id/price_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:fontFamily="@font/pacifico"
                   android:text="@string/price"
                   android:textStyle="bold"
                   android:layout_marginEnd="16dp"


                   />
               <TextView
                   android:id="@+id/price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@{lineItemsItem.price}"
                   tools:text="30"
                   android:textSize="20sp"

                   />
           </LinearLayout>
       </LinearLayout>
        <!--<TextView
            android:id="@+id/vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name"
           app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{lineItemsItem.title}"
            tools:text="ADIDAS"
            android:background="@color/xd_burgundy_transparent"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/xd_yellow"
            android:textStyle="bold"
            />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>