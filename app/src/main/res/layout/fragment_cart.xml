<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.cart.CartFragment"
    android:orientation="vertical"
    android:weightSum="6">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        tools:itemCount="10"
        tools:listitem="@layout/cart_item"
        />

    <!--<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cart_total_price_card_bg"
        android:layout_margin="16dp"
        app:cardCornerRadius="32dp"
        android:backgroundTint="@color/xd_blue_asset1"
        >-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@drawable/cart_total_price_card_bg"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:elevation="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/barlow_bold"
                    android:text="@string/total_price"
                    android:layout_margin="2dp"
                    android:textColor="@color/xd_burgundy"
                    />

                <TextView
                    android:id="@+id/cartTotalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/barlow_bold"
                    tools:text="2499 $"
                    android:layout_margin="2dp"
                    android:gravity="end"
                    android:textColor="@color/xd_burgundy"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/proceedToPayBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/proceed_to_buy"
                android:backgroundTint="@color/xd_blue_asset"
                />
        </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->
</LinearLayout>